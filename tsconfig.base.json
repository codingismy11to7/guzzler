{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable","ES2022"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "plugins": [{"name": "@effect/language-service"}],
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": ["vitest/importMeta"],

    "paths": {
      "@guzzler/cli": ["./packages/cli/src/index.js"],
      "@guzzler/cli/*": ["./packages/cli/src/*.js"],
      "@guzzler/cli/test/*": ["./packages/cli/test/*.js"],
      "@guzzler/domain": ["./packages/domain/src/index.js"],
      "@guzzler/domain/*": ["./packages/domain/src/*.js"],
      "@guzzler/domain/test/*": ["./packages/domain/test/*.js"],
      "@guzzler/mongodb": ["./packages/mongodb/src/index.js"],
      "@guzzler/mongodb/*": ["./packages/mongodb/src/*.js"],
      "@guzzler/mongodb/test/*": ["./packages/mongodb/test/*.js"],
      "@guzzler/server": ["./packages/server/src/index.js"],
      "@guzzler/server/*": ["./packages/server/src/*.js"],
      "@guzzler/server/test/*": ["./packages/server/test/*.js"],
      "@guzzler/utils": ["./packages/utils/src/index.js"],
      "@guzzler/utils/*": ["./packages/utils/src/*.js"],
      "@guzzler/utils/test/*": ["./packages/utils/test/*.js"],
      "@guzzler/webui": ["./packages/webui/src/index.js"],
      "@guzzler/webui/*": ["./packages/webui/src/*.js"],
      "@guzzler/webui/test/*": ["./packages/webui/test/*.js"],
    }
  }
}
