{
  "name": "guzzler",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "codegen": "npm run codegen --workspaces --if-present",
    "build": "tsc -b tsconfig.build.json && npm run build --workspaces --if-present",
    "check": "tsc -b tsconfig.json",
    "check-recursive": "npm run check --workspaces",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,tsx,mjs}\" --max-warnings=0",
    "lint:fix": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,tsx,mjs}\" --max-warnings=0 --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --coverage",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "changeset-publish": "npm run build && TEST_DIST= npm run test && changeset publish",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@effect/build-utils": "^0.7.7",
    "@effect/eslint-plugin": "^0.2.0",
    "@effect/language-service": "^0.2.0",
    "@effect/vitest": "latest",
    "@eslint/compat": "1.2.4",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.13.0",
    "@types/node": "^20.17.11",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/coverage-v8": "^2.1.8",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "effect": "^3.12.0",
    "eslint": "^9.13.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-codegen": "^0.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "glob": "^11.0.0",
    "patch-package": "^8.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "pnpm": {
    "overrides": {
      "vitest": "^2.0.5"
    },
    "patchedDependencies": {
      "@changesets/get-github-info@0.6.0": "patches/@changesets__get-github-info@0.6.0.patch",
      "@changesets/assemble-release-plan@6.0.4": "patches/@changesets__assemble-release-plan@6.0.4.patch",
      "babel-plugin-annotate-pure-calls@0.4.0": "patches/babel-plugin-annotate-pure-calls@0.4.0.patch"
    }
  }
}
