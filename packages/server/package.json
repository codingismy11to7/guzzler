{
  "name": "@guzzlerapp/server",
  "version": "0.0.7",

  "description": "Guzzler backend",
  "license": "MIT",
  "private": true,
  "type": "module",

  "repository": {
    "directory": "packages/server",
    "type": "git",
    "url": "git+ssh://git@github.com/codingismy11to7/guzzler.git"
  },
  "scripts": {
    "build": "npm run build-esm && npm run build-annotate && npm run build-cjs && build-utils pack-v2",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-esm": "tsc -b tsconfig.build.json",
    "check": "tsc -b tsconfig.json",
    "check:watch": "tsc -b tsconfig.json -w",
    "codegen": "build-utils prepare-v2",
    "coverage": "vitest run --coverage",
    "coverage:watch": "vitest --coverage",
    "dev": "nodemon src/main.ts",
    "pullEnv": "npx --yes dotenv-vault@latest pull",
    "pushEnv": "npx --yes dotenv-vault@latest push",
    "test": "vitest --run",
    "test:watch": "vitest"
  },

  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@effect/platform": "^0.90.9",
    "@effect/platform-node": "^0.98.4",
    "@guzzlerapp/domain": "^0.0.6",
    "@guzzlerapp/mongodb": "^0.0.4",
    "@guzzlerapp/utils": "^0.0.3",
    "@npmcli/package-json": "^6.1.1",
    "archiver": "^7.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "effect": "^3.17.13",
    "file-type": "^21.0.0",
    "immer": "^10.1.1",
    "node-expat": "^2.4.1",
    "simple-oauth2": "^5.1.0",
    "slash": "^5.1.0",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node-expat": "^2.3.5",
    "@types/npmcli__package-json": "^4.0.4",
    "@types/simple-oauth2": "^5.0.7",
    "@types/yauzl": "^2.10.3",
    "nodemon": "^3.1.9"
  },
  "effect": {
    "generateExports": {
      "include": ["**/*.ts"]
    },
    "generateIndex": {
      "include": ["**/*.ts"]
    }
  },
  "nodemonConfig": {
    "delay": 2000,
    "execMap": {
      "ts": "tsx"
    },
    "ignore": [
      "**/dist/**",
      "**/test**"
    ],
    "watch": [
      "../domain/src",
      "../mongodb/src",
      "./.env",
      "./src"
    ]
  }
}
