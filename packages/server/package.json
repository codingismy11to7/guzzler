{
  "name": "@guzzler/server",
  "version": "0.0.5",
  "type": "module",
  "license": "MIT",
  "description": "The server template",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/codingismy11to7/guzzler.git",
    "directory": "packages/server"
  },
  "scripts": {
    "dev": "nodemon src/main.ts",
    "codegen": "build-utils prepare-v2",
    "build": "npm run build-esm && npm run build-annotate && npm run build-cjs && build-utils pack-v2",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:watch": "vitest --coverage",
    "pullEnv": "npx --yes dotenv-vault@latest pull",
    "pushEnv": "npx --yes dotenv-vault@latest push"
  },
  "dependencies": {
    "@effect/platform": "^0.72.0",
    "@effect/platform-node": "^0.68.1",
    "@guzzler/domain": "^0.0.4",
    "@guzzler/mongodb": "^0.0.2",
    "@guzzler/utils": "^0.0.1",
    "@npmcli/package-json": "^6.1.0",
    "dotenv": "^16.4.7",
    "effect": "^3.12.1",
    "immer": "^10.1.1",
    "nanoid": "^5.0.9",
    "simple-oauth2": "^5.1.0"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@types/npmcli__package-json": "^4.0.4",
    "@types/simple-oauth2": "^5.0.7",
    "nodemon": "^3.1.9"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test**",
      "**/dist/**"
    ],
    "watch": [
      "./src",
      "../mongodb/src",
      "../domain/src",
      "./.env"
    ],
    "delay": 2000,
    "execMap": {
      "ts": "tsx"
    }
  }
}
